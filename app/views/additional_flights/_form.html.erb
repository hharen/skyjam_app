<%= form_for [@student, @additional_flight] do |form| %>

  <p>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </p>

    <%= form.hidden_field :student_id %>

    <p>
      <%= form.label :number_of_additional_flights %>
      <%= form.number_field :number_of_additional_flights %>
    </p>

    <p>
      <%= form.label :notes %>
      <%= form.text_field :notes %>
    </p>

  <%= form.submit %>
<% end %>
