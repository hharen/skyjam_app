<h1>Flights for <%= @student.name %></h1>

  <table>
    <thead>
      <tr>
        <th>Flight Nr.</th>
        <th>Date</th>
        <th>Manoeuvres</th>
        <th>Notes</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @student.all_flights.order(:date).each_with_index do |flight, index| %>

      <%# this doesn't work yet %>
      <%# <% @student.all_flights.order(flight: :date).each_with_index do |flight, index| %>
