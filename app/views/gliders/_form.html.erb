<%= form_for @glider do |form| %>
  <p>
    <%= form.label :glider_type %>
    <%= form.text_field :glider_type %>
  </p>

  <p>
    <%= form.label :size %>
    <%= form.text_field :size %>
  </p>

  <p>
    <%= form.label :manufacturer %>
    <%= form.text_field :manufacturer %>
  </p>

  <!-- <p>
    Picture: <%= image_tag(@glider.image_url, width: 100) if @glider.image.present? %>
  </p> -->

  <!-- <p>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </p> -->

  <p>
    <%= show_svg 'glider.svg' %>
  </p>

  <p>
    <%= form.label :background_color %>
    <%= form.select :background_color, options_for_select(Glider::COLORS), {include_blank: true}, class: 'glider-color-select', data: {area: 'background'} %>
  </p>

  <p>
    <%= form.label :arc_color %>
    <%= form.select :arc_color, options_for_select(Glider::COLORS), {include_blank: true}, class: 'glider-color-select', data: {area: 'arc'} %>
  </p>

  <p>
    <%= form.label :oval_color %>
    <%= form.select :oval_color, options_for_select(Glider::COLORS), {include_blank: true}, class: 'glider-color-select', data: {area: 'oval'} %>
  </p>  

  <p>
    <%= form.label :color %>
    <%= form.text_field :color %>
  </p>

  <p>
    <%= form.label :serial_number %>
    <%= form.text_field :serial_number %>
  </p>

  <p>
    <%= form.label :year_manufactured %>
    <%= form.number_field :year_manufactured, min: 1990, max: 2020 %>
  </p>

  <p>
    <%= form.label :student_id %>
    <%= form.collection_select(:student_id, Student.all, :id, :name, include_blank: 'School glider') %>
  </p>

  <%= form.submit %>
<% end %>
